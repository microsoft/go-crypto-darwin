{
  "go.useLanguageServer": true,
  "go.vetFlags": [
    "-unsafeptr=false"
  ],
  "gopls": {
    "analyses": {
      "unsafeptr": false
    }
  },
  "editor.formatOnSave": true,
  "[c]": {
    "editor.formatOnSave": false,
  },
  "[swift]": {
    "editor.defaultFormatter": "vknabel.vscode-apple-swift-format",
  },
  "files.associations": {
    "*.ejs": "ejs",
    "*.gmk": "makefile",
    "*.hcl": "terraform",
    "stdbool.h": "c"
  },
}
